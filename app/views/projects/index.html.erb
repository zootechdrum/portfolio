<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_project_path %>

<% @portfolio_items.each do |portfolio_item| %>
    <p> <%= link_to portfolio_item.title, project_show_path(portfolio_item) %> </p>
    <p> <%= portfolio_item.subtitle %> </p>
    <p> <%= portfolio_item.body %> </p>
    <p> <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %> </p>
    <%= link_to "Edit", edit_project_path(portfolio_item) %>
    <%= link_to 'Delete portfolio item', project_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %>

 
<% end %>