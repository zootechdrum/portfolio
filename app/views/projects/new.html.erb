<h1>Create a new Portfolio item</h1>


<%= form_with(model: @portfolio_item, local: true) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
  
    <div class="field">
      <%= form.label :subtitle %>
      <%= form.text_area :subtitle %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
